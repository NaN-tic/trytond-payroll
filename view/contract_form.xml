<form>
    <label name="employee"/>
    <field name="employee"/>
    <newline/>
    <label name="start"/>
    <field name="start"/>
    <label name="end"/>
    <field name="end"/>
    <label name="yearly_hours"/>
    <field name="yearly_hours"/>
    <label name="working_shift_hours"/>
    <field name="working_shift_hours"/>
    <label name="working_shift_price"/>
    <field name="working_shift_price"/>
    <notebook colspan="4">
        <page name="hours_summary">
            <field name="hours_summary" colspan="4"/>
        </page>
        <page name="rules">
            <label name="ruleset"/>
            <field name="ruleset"/>
            <newline/>
            <field name="rules" colspan="4" mode="tree,form"/>
        </page>
    </notebook>
    <separator id="state_buttons" colspan="4"/>
    <group id="state_buttons" colspan="4" col="3">
        <label name="state"/>
        <field name="state"/>
        <group id="buttons">
            <button name="cancel" string="Cancel"
                icon="tryton-cancel"/>
            <button name="draft" string="Draft"/>
            <button name="confirm" string="Confirm"
                icon="tryton-forward"/>
        </group>
    </group>
</form>
