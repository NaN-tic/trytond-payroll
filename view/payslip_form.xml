<form string="Payslip">
    <label name="contract"/>
    <field name="contract"/>
    <label name="employee"/>
    <field name="employee"/>
    <label name="start"/>
    <field name="start"/>
    <label name="end"/>
    <field name="end"/>
    <label name="amount"/>
    <field name="amount"/>
    <notebook>
        <page string="Lines" id="lines">
            <field name="lines" colspan="4"/>
        </page>
        <page string="Summary" id="summary">
            <field name="working_shifts" colspan="2" widget="many2many"/>
            <field name="entitlements" colspan="2"/>
            <label name="worked_hours"/>
            <field name="worked_hours"/>
            <label name="entitled_hours"/>
            <field name="entitled_hours"/>
            <label name="leave_hours"/>
            <field name="leave_hours"/>
            <newline/>
            <label name="total_hours"/>
            <field name="total_hours"/>
        </page>
    </notebook>
</form>
