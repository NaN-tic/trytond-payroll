<form string="Payslip Line" col="6">
    <label name="payslip"/>
    <field name="payslip"/>
    <newline/>
    <label name="type"/>
    <field name="type"/>
    <label name="working_hours"/>
    <field name="working_hours"/>
    <newline/>
    <field name="working_shifts" widget="many2many" colspan="6"/>
    <field name="generated_entitlements" colspan="3"/>
    <field name="leave_payments" colspan="3"/>
    <group id="hours" colspan="6" col="8">
        <label name="worked_hours"/>
        <field name="worked_hours"/>
        <label name="leave_hours"/>
        <field name="leave_hours"/>
        <label name="generated_entitled_hours"/>
        <field name="generated_entitled_hours"/>
        <separator id="totals" colspan="6"/>
        <label name="total_hours"/>
        <field name="total_hours"/>
        <label name="remaining_hours"/>
        <field name="remaining_hours"/>
        <label name="leave_payment_hours"/>
        <field name="leave_payment_hours"/>
        <label name="amount"/>
        <field name="amount"/>
    </group>
</form>
